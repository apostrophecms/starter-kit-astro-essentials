{
  "name": "starter-kit-astro",
  "version": "1.0.0",
  "description": "Apostrophe starter kit project for Astro integration",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node app",
    "dev": "crossenv APOS_EXTERNAL_FRONT_KEY=dev nodemon",
    "build": "crossenv NODE_ENV=production node app @apostrophecms/asset:build",
    "serve": "crossenv NODE_ENV=production node app",
    "release": "npm install && npm run build && npm run migrate",
    "migrate": "crossenv NODE_ENV=production node app @apostrophecms/migration:migrate"
  },
  "nodemonConfig": {
    "delay": 1000,
    "verbose": true,
    "watch": [
      "./app.js",
      "./modules/**/*",
      "./lib/**/*.js",
      "./views/**/*.html"
    ],
    "ignoreRoot": [
      ".git"
    ],
    "ignore": [
      "**/ui/apos/",
      "**/ui/src/",
      "**ui/public/",
      "locales/*.json",
      "public/uploads/",
      "public/apos-frontend/*.js",
      "data/"
    ],
    "ext": "json, js, html, scss, vue"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apostrophecms/combined-astro-starter-kit"
  },
  "author": "Apostrophe Technologies, Inc.",
  "license": "MIT",
  "dependencies": {
    "@apostrophecms/blog": "^1.0.4",
    "@apostrophecms/vite": "^1.1.0",
    "apostrophe": "^4.23.1-alpha.1",
    "crossenv": "^0.0.2-security"
  },
  "devDependencies": {
    "eslint-config-apostrophe": "^6.0.1",
    "nodemon": "^3.0.1"
  }
}
